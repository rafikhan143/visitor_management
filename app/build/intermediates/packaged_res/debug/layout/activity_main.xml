                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!--second card view-->
        <LinearLayout
