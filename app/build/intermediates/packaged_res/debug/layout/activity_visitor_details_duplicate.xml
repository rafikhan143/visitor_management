                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Visiting(Employee)"
                            android:layout_weight="1"
                            android:paddingVertical="18dp"
                            android:gravity="left"
                            />

                        <TextView
                            android:id="@+id/visitingemployee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
